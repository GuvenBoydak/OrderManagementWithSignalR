@model SignalRApp.MvcUI.Models.Request.Slider.UpdateSliderRequest

@{
    ViewData["Tile"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Slider Güncelleme İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Slider Güncelleme İşlemleri</div>
                        </div>
                        <input type="hidden" asp-for="Id"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="description"></textarea>
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Slider Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
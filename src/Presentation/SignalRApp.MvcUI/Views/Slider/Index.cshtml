@model List<SignalRApp.MvcUI.Models.Response.SliderResponse>
@{
    ViewData["Tile"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Slider İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Slider Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Slider ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><a href="/Slider/Delete/@item.Id/" class="btn btn-outline-danger"> Sil</a></td>
                                    <td><a href="/Slider/Update/@item.Id/" class="btn btn-outline-success"> Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td><a href="/Slider/Create/" class="btn btn-outline-primary">Yeni Slider Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
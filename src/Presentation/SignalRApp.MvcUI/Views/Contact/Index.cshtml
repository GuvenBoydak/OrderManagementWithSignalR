@model List<SignalRApp.MvcUI.Models.Response.ContactResponse>
@{
    ViewData["Tile"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Alt İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Alt İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim alanıyla ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">Email</th>
                                <th scope="col">Telefon</th>
                                <th scope="col">Konum</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Location</td>
                                    <td>@item.FooterDescription</td>
                                    <td><a href="/Contact/Delete/@item.Id/" class="btn btn-outline-danger"> Sil</a></td>
                                    <td><a href="/Contact/Update/@item.Id/" class="btn btn-outline-success"> Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td><a href="/Contact/Create/" class="btn btn-outline-primary">Yeni Hakkımızda Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
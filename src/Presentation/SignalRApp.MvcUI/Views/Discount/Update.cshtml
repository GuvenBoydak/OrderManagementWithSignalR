@model SignalRApp.MvcUI.Models.Request.Discount.UpdateDiscountRequest

@{
    ViewData["Tile"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Günün İndirim Listesi Güncelle</div>
                        </div>
                        <input type="hidden" asp-for="Id"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="amount">İndirim Oranı giriniz</label>
                                <input type="number" class="form-control" asp-for="Amount" id="amount">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Resim Url Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">İndirimi Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
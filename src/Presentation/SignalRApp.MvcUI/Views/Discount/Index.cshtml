@model List<SignalRApp.MvcUI.Models.Response.DiscountResponse>
@{
    ViewData["Tile"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirim alanıyla ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">İndirim Oran</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Title</td>
                                    <td>@item.Amount</td>
                                    <td><a href="/Discount//@item.Id/" class="btn btn-outline-danger"> Durum Drgişir</a></td>
                                    <td><a href="/Discount/Delete/@item.Id/" class="btn btn-outline-danger"> Sil</a></td>
                                    <td><a href="/Discount/Update/@item.Id/" class="btn btn-outline-success"> Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td><a href="/Discount/Create/" class="btn btn-outline-primary">Yeni İndirim Ekle</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
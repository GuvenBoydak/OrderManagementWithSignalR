@model List<ProductResponse>

@{
    ViewData["Tile"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ürün ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ürün Adı</th>
                                <th scope="col">Fiyat</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Status</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.Status</td>
                                    <td><a href="/Product/Delete/@item.Id/" class="btn btn-outline-danger"> Sil</a></td>
                                    <td><a href="/Product/Update/@item.Id/" class="btn btn-outline-success"> Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td>
                            <a href="/Product/Create/" class="btn btn-outline-primary">Ürün Ekle</a>
                        </td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
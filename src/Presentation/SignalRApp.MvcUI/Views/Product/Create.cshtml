@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SignalRApp.MvcUI.Models.Request.Product.CreateProductRequest

@{
    ViewData["Tile"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ürün Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="price">Ürün fiyat Giriniz</label>
                                <input type="text" class="form-control" asp-for="Price" id="price">
                            </div>
                            <div class="form-group">
                                <label for="categoryId">Ürün Kategorisini Seçiniz</label>
                                @Html.DropDownListFor(x=> x.CategoryId,
                                    (List<SelectListItem>)ViewBag.v,
                                    new { @class="form-control"})
                            </div>
                            <div class="form-group">
                                <label for="description">Ürün Açıklamasını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Ürün Resmi Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Ürün Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
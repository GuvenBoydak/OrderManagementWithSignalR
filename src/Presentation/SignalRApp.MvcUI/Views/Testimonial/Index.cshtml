@model List<SignalRApp.MvcUI.Models.Response.TestimonialResponse>
@{
    ViewData["Tile"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Referanslar ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Yorum</th>
                                <th scope="col">Resim Url</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Comment</td>
                                    <td>@item.ImageUrl</td>
                                    <td>
                                        <a href="/Testimonial/Delete/@item.Id/" class="btn btn-outline-danger"> Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Testimonial/Update/@item.Id/" class="btn btn-outline-success"> Güncelle</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td>
                            <a href="/Testimonial/Create/" class="btn btn-outline-primary">Yeni Referans Ekle</a>
                        </td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
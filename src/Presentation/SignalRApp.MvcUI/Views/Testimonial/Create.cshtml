@model SignalRApp.MvcUI.Models.Request.Testimonial.CreateTestimonialRequest

@{
    ViewData["Tile"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Referans Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="name">İsim Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="comment">Yorum Giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Görsel Url Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Referans Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
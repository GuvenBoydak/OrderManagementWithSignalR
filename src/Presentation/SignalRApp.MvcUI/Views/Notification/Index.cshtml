@model List<NotificationResponse>

@{
    ViewData["Tile"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bildirim ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Okundu mu</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Description</td>
                                    <td>
                                        @(item.IsRead ? "Okundu" : "Okunmadı")
                                    </td>
                                    <td>
                                        <a href="/Notification/Delete/@item.Id/" class="btn btn-outline-danger"> Delete</a>
                                    </td>
                                    <td>
                                        <a href="/Notification/Update/@item.Id/" class="btn btn-outline-success"> Güncelle</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td>
                            <a href="/Notification/Create/" class="btn btn-outline-primary">Bildirim Ekle</a>
                        </td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model SignalRApp.MvcUI.Models.Request.Notification.CreateNotificationRequest

@{
    ViewData["Tile"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <input type="text" class="form-control" asp-for="Description" id="description">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Icon Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageUrl">
                            </div>
                            <div class="form-group">
                                <label for="type">Bildirim Türü Giriniz</label>
                                <input type="text" class="form-control" asp-for="Type" id="type">
                            </div>
                            <input type="hidden" asp-for="IsRead" value="false"/>
                            <div class="card-action">
                                <button class="btn btn-primary">Bildirim Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
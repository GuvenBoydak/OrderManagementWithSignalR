@model SignalRApp.MvcUI.Models.Request.SocialMedia.UpdateSocialMediaRequest

@{
    ViewData["Tile"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Media İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Media Girişi</div>
                        </div>
                        <input type="hidden" asp-for="Id"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Başlık Adını Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                            <div class="form-group">
                                <label for="url">Görsel Url Giriniz</label>
                                <input type="text" class="form-control" asp-for="Url" id="url">
                            </div>
                            <div class="form-group">
                                <label for="icon">Açıklama Giriniz</label>
                                <input type="text" class="form-control" asp-for="Icon" id="icon">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Hakkımızda Yazısını Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
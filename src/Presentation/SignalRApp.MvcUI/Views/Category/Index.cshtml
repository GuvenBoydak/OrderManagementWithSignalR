@model List<SignalRApp.MvcUI.Models.Response.CategoryResponse>
@{
    ViewData["Tile"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Kategori ile ilgili işlemleri aşağıda gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@item.Name</td>
                                    <td><a href="/Category/Delete/@item.Id/" class="btn btn-outline-danger"> Delete</a></td>
                                    <td><a href="/Category/Update/@item.Id/" class="btn btn-outline-success"> Güncelle</a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <td><a href="/Category/Create/" class="btn btn-outline-primary">Add Category</a></td>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>